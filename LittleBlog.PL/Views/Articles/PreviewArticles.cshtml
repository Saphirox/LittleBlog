@model IEnumerable<LittleBlog.ViewModels.Article.GetArticleViewModel>
@{
    ViewBag.Title = Model.Count() + " articles";
    Layout = "../Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Preview articles</h2>

    @foreach (var article in Model)
    {
        <div class="card" style="margin-top: 20px;">
            <div class='card-body'>
                <h6 class="card-subtitle text-muted">
                    @article.PublishEditDates.Last().Date
                </h6>
                <h2 class="card-title" style='padding:10px 0;'>@article.Header</h2>
                <h5 class="card-subtitle text-muted" style='padding: 20px 0;'>
                    Time for reading article @article.TimeForRead
                </h5>

                <div class="content">
                    @article.Description ...
                    @Html.ActionLink("Read more", "GetArticle", new {id = article.Id})
                </div>

                @foreach (var tag in article.Tags)
                {
                    <span class="badge badge-dark">@tag.Name</span>
                }

            </div>
        </div>   
    }
    
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create article", "CreateArticle", new { count=1, startWith=0, area = "Admin" }, new {@class="card-subtitle text-muted"})
    }
</div>



