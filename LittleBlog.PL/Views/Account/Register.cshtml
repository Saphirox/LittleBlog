@using System.Web.UI.WebControls
@model LittleBlog.ViewModels.Identity.RegisterViewModel

@{
    ViewBag.Title = "Sign up";
    Layout = "../Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div>
        @Html.LabelFor(s => s.Nick)
        @Html.TextBoxFor(s => s.Nick, null, new {@class = "form-control"})
        @Html.ValidationMessage("Nick", new { @style = "color: red;"})
    </div>
    
    <div class="form-group">
        @Html.LabelFor(s => s.Email)
        @Html.TextBoxFor(s => s.Email, null, new {@class = "form-control"})
        @Html.ValidationMessage("Email", new { @style = "color: red;"} )
    </div>
    
    <div>
        @Html.LabelFor(s => s.Password)
        @Html.TextBoxFor(s => s.Password, null, new {@class = "form-control"})
        @Html.ValidationMessage("Password", new { @style = "color: red;"})
    </div>
    
    <button type="submit" class="btn btn-success">Signin</button>
    <img id="loader" style="display: none" src="https://loading.io/spinners/ellipsis/index.discuss-ellipsis-preloader.svg" alt="Alternate Text" />
}

@section Scripts
{
    <script>
        $(function() {
            $('button[type="submit"]').click(function() {
                $('#loader').show();
            });
        });
    </script>
}
